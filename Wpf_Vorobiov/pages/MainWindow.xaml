<Window x:Class="Wpf_Vorobiov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Vorobiov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2" LastChildFill="True">
            <Image Source="/media/logo1.png" DockPanel.Dock="Left"/>
            <TextBlock Text="Play has no limits" Style="{StaticResource zagolovok}" DockPanel.Dock="Top"/>
        </DockPanel>
        <TextBlock Text="Всего от 399$ до 499$" Grid.ColumnSpan="2" Grid.Row="2" Style="{StaticResource reklama}" FontSize="20"/>

        <Image Source="/media/ban.png" Grid.Row="1"/>
        <Frame Name="frmMain" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
